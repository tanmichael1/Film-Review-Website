<%- include("partials/header"); -%>
<div class="container content-box">



  <h1>Submit Review</h1>
  <!------------Form Start---------->

  <div id='form'>
    <div class="row">
      <div class="col-md-12">

        <form action="/submit" method="post">
          <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="postTitle">
            <br>

            <label for="">Time (in minutes)</label>
            <input type="number" name="mins" value="">
            <br>
            <br>

            <label>Release Year</label>
            <input class="form-control" type="text" name="year">
            <br>

            <!-- <label for="">Release Year</label>
            <div id="year" class="form-row">
              <input type="number" placeholder="Year" name="year" id="year">
            </div>
            <br> -->

            <label for="">Director</label>
            <div id=director class="form-row">
              <input type="text" name="director" id="Director">
            </div>
            <br>


            <label for="">Actors (separate with commas)</label>
            <div id="actors" class="form-row">
              <input type="text" name="actors" >
            </div>
            <br>

            <!-- var cast = "Donald Pleasence, Jamie Lee Curtis, Nick Castle, P.J. Soles, Nancy Kyes";
